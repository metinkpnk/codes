import React, { Component } from 'react'

 class App extends Component {
  constructor(props) {
    super(props)
    this.state = {
      count: 0,
      input: ""
    }
  }
  handleInputChange = e => {
    const { value } = e.target;
    this.setState({ input: value });
  };
  render() {
    const { input } = this.state;
    return (
      <div>
        <p>{this.state.count} kere t覺klad覺n覺z </p>
        <button onClick={() => this.setState({ count: this.state.count + 1 })}>Artt覺r</button>
        <button onClick={() => this.setState({ count: this.state.count - 1 })}>Azalt</button>
      </div>
    )
  }
}

export default App
